@model G10_ProjectDotNet.Models.SessionViewModels.CreateSessionViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Group"></label>
        <select asp-for="Group" asp-items="@(ViewData["Groups"] as SelectList)" class="form-control">
            <option value="">-- selecteer een groep --</option>
        </select>
        <span asp-validation-for="Group" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Start sessie</button>
        <a asp-controller="Session" asp-action="Index" class="btn">Annuleer</a>
    </div>
</form>

@section scripts {
    <script asp-src-include="lib/jquery-validation/dist/jquery.validate.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

