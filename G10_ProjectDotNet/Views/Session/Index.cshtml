@model G10_ProjectDotNet.Models.SessionViewModels.IndexViewModel
@{
    ViewData["Title"] = "Session";
}

@if (Model.Session == null)
{
    <h1>Er is momenteel geen sessie bezig</h1>
    <a asp-controller="Session" asp-action="Create" class="btn btn-primary">Sessie starten</a>
}
else
{
    <h1>Register</h1>
    <table class="table">
        <tr>
            <th>UserId</th>
            <th>Naam</th>
            <th>Status</th>
            <th>Registreer</th>
            @if (ViewContext.HttpContext.User.IsInRole("Teacher"))
            {
                <th class="text-right">Meld Afwezig</th>
            }
        </tr>
        @foreach (var member in Model.Members)
        {
            <tr>
                <td>
                    @member.Id
                </td>
                <td>
                    @member.UserName
                </td>

                @if (!Model.AlreadyRegistered(member.Id))
                {
                    <td>Aanwezig</td>
                    <td><a asp-controller="Course" asp-action="Index" asp-route-memberId="@member.Id">Lesmateriaal weergeven</a></td>
                }
                else
                {
                    <td>Afwezig</td>
                    <td><a asp-controller="Attendance" asp-action="Create" asp-route-memberId=@member.Id>Registreer aanwezigheid</a></td>
                }

                @if (ViewContext.HttpContext.User.IsInRole("Teacher"))
                {
                    <td class="text-right"><a asp-controller="Session" asp-action="RegisterAttendancy" asp-route-memberId=@member.Id>X</a></td>
                }

            </tr>
        }
    </table>
    <a asp-controller="Session" asp-action="EndSession" class="btn btn-primary">Sessie beëindigen</a>

    @section scripts {
        <script asp-src-include="lib/jquery-validation/dist/jquery.validate.js"></script>
        <script asp-src-include="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    }
}
