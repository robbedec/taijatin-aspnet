<style>
    /* Remove default bullets */
    ul, #myUL {
        list-style-type: none;
    }

    /* Remove margins and padding from the parent ul */
    #myUL {
        margin: 0;
        padding: 0;
    }

    /* Style the caret/arrow */
    .caret {
        cursor: pointer;
        user-select: none; /* Prevent text selection */
        color: #007bff;
        margin-left: 15px;
    }

        /* Create the caret/arrow with a unicode, and style it */
        .caret::before {
            content: "\25B6";
            color: #007bff;
            display: inline-block;
            margin-right: 6px;
        }

    /* Rotate the caret/arrow icon when clicked on (using JavaScript) */
    .caret-down::before {
        transform: rotate(90deg);
    }

    /* Hide the nested list */
    .nested {
        display: none;
    }

    /* Show the nested list when the user clicks on the caret/arrow (with JavaScript) */
    .active {
        display: block;
    }

    .commentBox {
        position: relative;
        overflow: hidden;
        display: block;
        background: #f5f5f5;
        font-size: 14px;
        padding: 20px;
        border-radius: 8px;
        margin: 0 0 20px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
    }
    .commentMember {
        font-size: 18px;
        color: #555;
    }
    .commentUserImage {
        width: 90px;
        display: block;
        border-radius: 50%;
        vertical-align: middle;
        float: left;
        margin-right: 10px;
        margin-top: 5px;
    }
    .cbtn {
        display: inline-block;
        font-weight: bold;
        font-size: 12px;
        padding: 6px 15px;
        border-radius: 20px;
        line-height: 1.4;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        cursor: pointer;
        -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
        box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
    }
    .cbtn:hover {
        color: white;
        text-decoration: none;
    }
    .btnReply {
        color: #fff;
        background-color: #5bc0de;
        border-color: #46b8da;
    }
    .btnDelete {
        color: #fff;
        background-color: #F31431;
    }
</style>

@model G10_ProjectDotNet.Models.CourseViewModel.IndexViewModel
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">Lesmateriaal</h1>
<div class="row offset-md-1">
    <div class="col-md-3">
        <h3>Modules:</h3>
        @foreach (var course in Model.Courses)
        {
            <ul id="myUL">
                <li>
                    <span class="caret">@course.MinGrade</span>
                    <ul class="nested">
                        @foreach (var module in course.Modules)
                        {
                            <li><a asp-controller="Course" asp-action="Index" asp-route-courseModuleId="@module.CourseModuleId" asp-route-memberId="@Model.MemberId">@module.Name</a></li>
                        }
                    </ul>
                </li>
            </ul>
        }
    </div>
    <div class="col-md-9">
        @if (Model.CourseModuleId == null)
        {
            <p>Selecteer een categorie om naar het lesmateriaal te gaan.</p>
        }
        else
        {
            <a asp-controller="Course" asp-action="Index" asp-route-courseModuleId=null asp-route-memberId="@Model.MemberId"> < Terug naar overzicht</a>
            <br />
            <h1>@Model.CourseModule.Name</h1>
            @if (Model.CourseModule.Text == null || Model.CourseModule.Text == "")
            {
                <p class="text-info">Oefening moet nog aangevuld worden met tekst.</p>
            }
            else
            {
                <p>@Model.CourseModule.Text</p>
            }
            @if (Model.CourseModule.Url == null || Model.CourseModule.Url == "")
            {
                <p class="text-info">Oefening heeft nog geen video ter beschikking.</p>
            }
            else
            { 
                <iframe width="605"
                        height="340"
                        src="@Model.CourseModule.Url"
                        frameborder="1"
                        allowfullscreen></iframe>
            }
            <h4 class="mt-3">Reacties</h4>
            <form method="post">
                <textarea name="comment" id="comment" class="form-control mb-1" rows="2" placeholder="Laat een reactie achter!"></textarea>
                <button asp-controller="Course" type="submit" asp-action="AddComment" class="btn btn-primary mt-1 mb-3" asp-route-memberId="@Model.MemberId" asp-route-courseModuleId="@Model.CourseModule.CourseModuleId">Add</button>
            </form>
            
            @if (Model.CourseModule.Comments.Count() == 0)
            {
                <p>Nog geen reacties.</p>
            }
            else 
            {
                foreach(var comment in Model.CourseModule.Comments)
                {
                    <img src="https://wallfar.com/jiu/avatar-male.png" class="commentUserImage">
                    <div class="commentBox">
                        <h4 class="commentMember">Door: @comment.Member.Firstname @comment.Member.Lastname</h4>
                        <p class="commentText">@comment.CommentText</p>
                        <a href="#" class="cbtn btnReply">Antwoord</a>
                        @if (@comment.Member.Id == Model.MemberId)
                        {
                            <a href="#" class="cbtn btnDelete ml-1">Verwijder</a>
                        }
                    </div>
                }
            }
        }
    </div>
</div>

<script>
    var toggler = document.getElementsByClassName("caret");
    var i;

    for (i = 0; i < toggler.length; i++) {
        toggler[i].addEventListener("click", function () {
            this.parentElement.querySelector(".nested").classList.toggle("active");
            this.classList.toggle("caret-down");
        });
    }
</script>
