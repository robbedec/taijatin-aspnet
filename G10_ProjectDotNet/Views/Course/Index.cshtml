@model G10_ProjectDotNet.Models.CourseViewModel.IndexViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<table class="table">
    <tr>
        <th>courseId</th>
        <th>MinGrade</th>
        <th></th>
    </tr>
    @foreach (var course in Model.Courses)
    {
        <tr>
            <td>
                @course.CourseId
            </td>
            <td>
                @course.MinGrade
            </td>
            <td>
                <a asp-controller="Attendance" asp-action="Create">Selecteer categorie</a>
            </td>
        </tr>
    }
</table>

